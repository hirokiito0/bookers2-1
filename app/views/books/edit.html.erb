<main>
  <% if flash[:notice] %>
    <div class="alert alert-primary" role="alert">
      <%= notice %>
    </div>
  <% end %>
   
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>
          <%= form_with model:@book,url:book_path(@book),method: :patch, local:true do |f| %>
            <% if @book.errors.any? %>
              <%= @book.errors.count %>errors prohibited this obj from being saved:
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                  
                    <li><%= message %></li>
                  
                  <% end %>
                </ul>
              <% end %> 
          <div class="form-group">
          <label for="user_name">Name</label>
            <%= f.text_field :title,class:"form-control name", autofocus: true, id:"inputName", placeholder:"名前"%>
          </div>

          <div class="form-group">
            <%= f.label :Opinion, class:'user_introduction'%><br />
            <%= f.text_area :body, class: 'form-control introduction', id: 'user_introduction' %>
          </div>
          <div class="form-group">
            <%= f.submit "Update Book",class:"btn btn-secondary"%>
          </div>
            
          <% end %>
      </div>
    </div>
  </div>
</main>

<%= render 'layouts/footer' %>