<main>
  <% if flash[:notice] %>
      <div class="alert alert-primary" role="alert">
        <%= notice %>
      </div>
  <% end %>
  <div class="container">
    <div class="row">

      <%= render "layouts/user_info", user: @user %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@book.user.id) do %>
                    <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, fallback: 'no_image.jpg',size:"50x50" %><br>
                    <%= @book.user.name %>
                  <% end %>
                </td>
                <td>
                  <%= @book.title %>
                </td>
                <td>
                  <%= @book.body %>
                </td>
                <td>
                  <% if @user.id == current_user.id %>
                    <%= link_to "Edit",edit_book_path(@book.id),class:"btn btn-sm btn-success"  %>
                  <% end %>
                </td>
                <td>
                  <% if @user.id == current_user.id %>
                    <%= link_to "Destroy", book_path(@book.id), method: :delete,  "data-confirm" => "本当に消しますか？",class:"btn btn-sm btn-danger " %>
                  <% end %>
                </td>
              </tr>

          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

<%= render 'layouts/footer' %>