<main>
    <% if flash[:notice] %>
      <div class="alert alert-primary" role="alert">
        <%= notice %>
      </div>
    <% end %>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <%= render 'layouts/user_info' ,user: @user %>
        <div class="col-md-8 offset-md-1">
        <h2>Books</h2>

          <table class="table table-haver table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg' %>
                  </td>
                  <td>
                    <%= link_to book_path(book.id) do %>
                      <%= book.title %>
                    <% end %>
                  </td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>


      </div>
    </div>
</main>
<%= render 'layouts/footer' %>