<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model:@user,url:user_path(@user),method: :patch, local:true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name,class:"form-control name", autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>
        <div class="form-group">
          <label for="user_Image">Image</label><br>
          <%= f.attachment_field :profile_image, placeholder: "image" %> 
        </div>
        <div class="form-group">
          <%= f.label :introduction, class:'user_introduction'%><br />
          <%= f.text_area :body, class: 'form-control introduction', id: 'user_introduction' %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User",class:"btn btn-secondary"%>
        </div>
        
        <% end %>
      </div>
    </div>
  </div>
</main>