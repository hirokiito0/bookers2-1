<main>
    <% if flash[:notice] %>
      <div class="alert alert-primary" role="alert">
        <%= notice %>
      </div>
    <% end %>

    <div class="container px-5 px-sm-0">
      <div class="row">
        <%= render 'layouts/user_info',user: @user %>
        <div class="col-md-8 offset-md-1">
        <h2>Users</h2>

          <table class="table table-haver table-inverse">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td>
                    <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback:'no_image.jpg',size:"50x50" %>
                  </td>
                  <td>
                    <%= user.name %>
                  </td>
                  <td>
                    <%= link_to "show",user_path(user.id) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>


      </div>
    </div>
</main>

<%= render 'layouts/footer' %>
